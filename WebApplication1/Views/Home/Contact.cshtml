
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}




<div class="container">
    <h2>Contact Form</h2>
    <form action="@Url.Action("Index", "Contact")" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" id="name" name="name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Phone:</label>
            <input type="number" id="phone" name="phone" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Preferred Contact Method:</label><br />
            <div class="form-check">
                <input type="radio" id="email" name="contactMethod" value="Email" class="form-check-input" />
                <label for="email" class="form-check-label">Email</label>
            </div>
            <div class="form-check">
                <input type="radio" id="phone" name="contactMethod" value="Phone" class="form-check-input" />
                <label for="phone" class="form-check-label">Phone</label>
            </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country:</label>
            <select id="country" name="country" class="form-select">
                <option value="jordan">Jordan</option>
                <option value="syria">Syria</option>
                <option value="iraq">IRAQ</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="interests" class="form-label">Interests:</label>
            <select id="interests" name="interests" class="form-select" multiple>
                <option value="coding">Coding</option>
                <option value="sleeping">Sleeping</option>
                <option value="eating">eating</option>
                <option value="singing">Singing</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
